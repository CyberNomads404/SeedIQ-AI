{
  "openapi": "3.0.3",
  "info": {
    "title": "SeedIQ AI API",
    "version": "1.0.0",
    "description": "OpenAPI specification generated from the SeedIQ-AI Postman Collection.\n\nThis API processes grain images (soy, corn, etc.) using AI models and returns classification results.",
    "contact": {
      "name": "CyberNomads404",
      "url": "https://github.com/CyberNomads404"
    }
  },

  "servers": [
    {
      "url": "/api/",
      "description": "Auto â€” same host/port of the current environment"
    }
  ],

  "components": {
    "securitySchemes": {
      "WebhookToken": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },

    "schemas": {
      "AnalyzeRequest": {
        "type": "object",
        "required": ["callback_url", "payload"],
        "properties": {
          "callback_url": {
            "type": "string",
            "format": "uri"
          },
          "payload": {
            "type": "object",
            "required": ["external_id", "image_url", "seed_category"],
            "properties": {
              "external_id": { "type": "string" },
              "image_url": { "type": "string", "format": "uri" },
              "seed_category": {
                "type": "string",
                "enum": ["soy", "corn"]
              }
            }
          }
        }
      },

      "AnalyzeQueuedResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "boolean" },
          "message": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
              "external_id": { "type": "string" },
              "job_id": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["QUEUED"]
              }
            }
          }
        }
      },

      "JobStatusResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "boolean" },
          "message": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
              "job_id": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["PENDING", "QUEUED", "COMPLETED"]
              },
              "payload": { "type": ["object", "null"] },
              "result": { "type": ["object", "null"] }
            }
          }
        }
      }
    }
  },

  "paths": {
    "/": {
      "get": {
        "summary": "Welcome",
        "tags": ["General"],
        "description": "Returns a welcome message and API info.",
        "responses": {
          "200": { "description": "API online" }
        }
      }
    },

    "/webhook": {
      "get": {
        "summary": "Ping Webhook",
        "description": "Checks if the webhook authentication token is valid.",
        "tags": ["Webhook"],
        "security": [{ "WebhookToken": [] }],
        "responses": {
          "200": { "description": "Webhook authenticated successfully" }
        }
      }
    },

    "/webhook/analyze/enqueue": {
      "post": {
        "summary": "Enqueue a new grain image analysis",
        "description": "Adds a new AI job to the processing queue.",
        "tags": ["Analyze"],
        "security": [{ "WebhookToken": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AnalyzeRequest" }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Job queued successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AnalyzeQueuedResponse" }
              }
            }
          }
        }
      }
    },

    "/webhook/analyze/get_status/{job_id}": {
      "get": {
        "summary": "Get AI job status",
        "description": "Returns the current status of a grain analysis job.",
        "tags": ["Analyze"],
        "security": [{ "WebhookToken": [] }],
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Status retrieved",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/JobStatusResponse" }
              }
            }
          }
        }
      }
    },

    "/_routes": {
      "get": {
        "summary": "List API routes",
        "tags": ["General"],
        "responses": {
          "200": { "description": "List returned" }
        }
      }
    }
  }
}
